{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>  
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit}}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-cod" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_niftepay_total" value="{{ payment_niftepay_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
               <select name="payment_niftepay_order_status_id" id="input-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_niftepay_order_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_niftepay_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_niftepay_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div> 
          <div class="form-group">
           <label class="col-sm-2 control-label" for="sandbox">
      <span data-toggle="tooltip" title="{{ help_sandbox }}">{{ entry_sandbox }}</span>  
      </label>
<div class="col-sm-10">
              <select name="payment_niftepay_sandbox" id="sandbox" class="form-control">
			  {% if payment_niftepay_sandbox %}
                <option value="1" selected="selected">{{ enabled }}</option>
                <option value="0">{{ disabled }}</option>
                {% else %}
                <option value="1">{{ enabled }}</option>
                <option value="0" selected="selected">{{ disabled }}</option>
                {% endif %}
              </select>
            </div>
        </div>
		  <div class="form-group">
       <label class="col-sm-2 control-label" for="merchantID">
      <span data-toggle="tooltip" title="{{ help_merchantID }}">{{ entry_merchantId }}</span>      
      </label>
			<div class="col-sm-10">
				<input type="text" id="merchantId" name="payment_niftepay_merchantId" value="{{ payment_niftepay_merchantId }}" placeholder="{{ entry_merchantId }}" class="form-control"/>
			</div>
		  </div>
      <div class="form-group">
       <label class="col-sm-2 control-label" for="subMerchantId">
      <span data-toggle="tooltip" title="{{ help_subMerchantId }}">{{ entry_subMerchantId }}</span>      
      </label>
			<div class="col-sm-10">
				<input type="text" id="subMerchantId" name="payment_niftepay_subMerchantId" value="{{ payment_niftepay_subMerchantId }}" placeholder="{{ entry_subMerchantId }}" class="form-control"/>
			</div>
		  </div>
       <div class="form-group">
       <label class="col-sm-2 control-label" for="password">
      <span data-toggle="tooltip" title="{{ help_password }}">{{ entry_password }}</span>      
      </label>
			<div class="col-sm-10">
				<input type="password" id="password" name="payment_niftepay_password" value="{{ payment_niftepay_password}}" placeholder="{{ entry_password }}" class="form-control"/>
			</div>
		  </div>
       <div class="form-group">
      <label class="col-sm-2 control-label" for="txnExpiryHours">
      <span data-toggle="tooltip" title="{{ help_txnExpiryHours }}">{{ entry_txnExpiryHours }}</span>      
      </label>
			<div class="col-sm-10">
				<input type="number" id="txnExpiryHours" name="payment_niftepay_txnExpiryHours" type="tel" value="{{ payment_niftepay_txnExpiryHours}}" placeholder="{{ entry_txnExpiryHours }}" class="form-control"/>
			</div>
		  </div>
		  <div class="form-group">
			<label class="col-sm-2 control-label" for="integritySalt">
       <span data-toggle="tooltip" title="{{ help_integritySalt }}">{{ entry_integritySalt }}</span>      
      </label>
            <div class="col-sm-10">
              <input type="password"  id="integritySalt" name="payment_niftepay_integritySalt" value="{{ payment_niftepay_integritySalt }}" placeholder="{{ entry_integritySalt}}" class="form-control" />
            </div>
        </div>  
    <div class="form-group">
       <label class="col-sm-2 control-label" for="version">
      <span data-toggle="tooltip" title="{{ help_version }}">{{ entry_version }}</span>      
      </label>
			<div class="col-sm-10">
				<input type="text" id="version" name="payment_niftepay_version" value="{{ payment_niftepay_version}}" placeholder="{{ entry_version}}" class="form-control"/>
			</div>
		  </div>
		  <div class="form-group">
      <label class="col-sm-2 control-label" for="language">
       <span data-toggle="tooltip" title="{{ help_language }}">{{ entry_language }}</span>   
   </label>			
			<div class="col-sm-10">
				<input type="text" id="language" name="payment_niftepay_language" value="{{ payment_niftepay_language }}" placeholder="{{ entry_language }}" class="form-control"/>
			</div>
		  </div>	 
		 
		  <div class="form-group">
       <label class="col-sm-2 control-label" for="currency">
       <span data-toggle="tooltip" title="{{ help_currency }}">{{ entry_currency }}</span>   
   </label>	
			<div class="col-sm-10">
				<input type="text" id="currency" name="payment_niftepay_currency" value="{{ payment_niftepay_currency}}" placeholder="{{ entry_currency}}" class="form-control"/>
			</div>
		  </div>
		 

         <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_niftepay_status" id="input-status" class="form-control">
                {% if payment_niftepay_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_niftepay_sort_order" value="{{ payment_niftepay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer}} 